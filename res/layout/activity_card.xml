<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView android:id="@+id/txtViewName"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"        
        />
    
     <TextView android:id="@+id/txtViewMail"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"        
        />
     
     <TextView android:id="@+id/txtViewCategory"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"        
        />
     
      <TextView android:id="@+id/txtViewWebSite"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"        
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="phone icon"
            android:src="@drawable/phone" />

        <ImageView android:id="@+id/imgTwitter"
            android:contentDescription="twitter icon"
            android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:src="@drawable/twitter" />
          <ImageButton
    		android:id="@+id/sharingButton"
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
		    android:src="@drawable/sharing" />
        
    </LinearLayout>

</RelativeLayout>